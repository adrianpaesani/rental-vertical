<record id="dms_document_upload_action" model="ir.actions.act_window">
    <field name="name">Documents</field>
    <field name="res_model">ir.attachment</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="dms_document_upload_menu"
    action="dms_document_upload_action" sequence="200"/>

</odoo>
