<odoo>

<record id="dms_document_upload_form" model="ir.ui.view">
    <field name="name">dms.document.upload.form</field>
    <field name="model">ir.attachment</field>
    <field name="arch"  type="xml">
        <form string="Document Details">
            <header>
                <button name="import_button" string="Import Now" type="object"/>
            </header>
            <group name="main">
                <field name="name"/>
                <field name="id"/>
                <field name="partner_id"/>
            </group>
        </form>
    </field>
</record>

<record id="dms_document_upload_tree" model="ir.ui.view">
    <field name="name">dms.document.upload.tree</field>
    <field name="model">ir.attachment</field>
    <field name="arch"  type="xml">
        <tree string="Document Uploads" create="false">
            <field name="name"/>
            <field name="file_type"/>
            <field name="partner_id"/>
        </tree>
    </field>
</record>

