<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_rental.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="after">
                    <field name="display_product_id" required="1"/>
                    <field name="rental_ok" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='rental']" position="attributes">
                    <attribute name="invisible">0</attribute>
                    <attribute name="attrs">{'invisible': [('rental_ok', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='can_sell_rental']" position="attributes">
                    <attribute name="invisible">0</attribute>
                    <attribute name="string">Sell From Rental</attribute>
                    <attribute name="attrs">{'invisible': [('rental_ok', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='number_of_days']" position="after">
                    <field name="number_of_time_unit" required="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='number_of_days']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
