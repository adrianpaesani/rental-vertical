<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_attachment_form" model="ir.ui.view">
            <field name="name">ir.attachment</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="action_import_invoice"
                                string="Import Invoice"
                                attrs="{'invisible': [('invoice_type', '=', 'none')]}"
                                type="object" />
                        <button name="action_create_draft_invoice"
                                string="Create Draft Invoice"
                                attrs="{'invisible': [('invoice_type', '=', 'none')]}"
                                type="object" />
                        <button name="action_confirm"
                                string="Confirm Document"
                                attrs="{'invisible': [('confirmed', '=', True)]}"
                                type="object" />
                        <button name="%(swrent_document_extension.action_assign_document)d"
                                string="Assign Document"
                                type="action" />
                    </header>
                </xpath>
                <xpath expr="//field[@name='mimetype']" position="after">
                    <field name="partner_id"/>
                    <field name="invoice_type"/>
                    <field name="user_id"/>
                    <field name="confirmed"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
