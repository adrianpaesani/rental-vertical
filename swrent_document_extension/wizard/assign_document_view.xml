<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_assign_document_form">
            <field name="name">Assign Documents to Record</field>
            <field name="model">assign.document</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Assign Documents to Record">
                    <group>
                        <field name="res_model" no_create="1"/>
                        <field name="res_id" invisible="1"/>
                        <field name="product_id" attrs="{'invisible': [('res_model','!=','product.product')]}"/>
                        <field name="invoice_id" attrs="{'invisible': [('res_model','!=','account.invoice')]}"/>
                        <field name="picking_id" attrs="{'invisible': [('res_model','!=','stock.picking')]}"/>
                        <field name="sale_id" attrs="{'invisible': [('res_model','!=','sale.order')]}"/>
                        <field name="purchase_id" attrs="{'invisible': [('res_model','!=','purchase.order')]}"/>
                    </group>
                    <footer>
                        <button name="action_done" string="Assign" type="object"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_assign_document">
            <field name="name">Assign Documents to Record</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">assign.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
