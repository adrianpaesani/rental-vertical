<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="rental_base.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='order_info']" position="inside">
                    <field name="insurance_type"
                           attrs="{'invisible': [('rental','=',False)]}"/>
                    <field name="update_insurance_line" invisible="1"/>
                    <field name="insurance_line_ids" invisible="1"/>
                    <label for="insurance_percent"
                           attrs="{'invisible': [
                                      '|',
                                      ('insurance_type','=','none'),
                                      ('rental','=',False),
                                  ]}"/>
                    <div attrs="{'invisible': [
                        '|',
                        ('insurance_type','=','none'),
                        ('rental','=',False),
                    ]}">
                        <field name="insurance_percent" class="oe_inline"/> %
                    </div>
                    <field name="insurance_price_unit"
                           attrs="{'invisible': [
                                      '|',
                                      ('insurance_type','=','none'),
                                      ('rental','=',False),
                                  ]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                    <field name="update_insurance_line" invisible="1"/>
                    <field name="insurance_type" invisible="1"/>
                    <field name="rental" invisible="1"/>
                    <button name="update_rental_insurance_line"
                            type="object"
                            icon="fa-refresh"
                            class="oe_inline"
                            string="Update Insurance Line"
                            attrs="{'invisible': [
                                       '|', '|',
                                       ('insurance_type','=','none'),
                                       ('rental','=',False),
                                       ('update_insurance_line','=',False),
                                   ]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
