<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_rental.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//form//field[@name='tax_id']"
                       position="after">
                    <field name="insurance_type"
                           attrs="{'invisible': [('rental','=',False)]}"/>
                    <label for="insurance_percent"
                           attrs="{'invisible': [
                                      '|',
                                      ('insurance_type','=','none'),
                                      ('rental','=',False),
                                  ]}"/>
                    <div attrs="{'invisible': [
                        '|',
                        ('insurance_type','=','none'),
                        ('rental','=',False),
                    ]}">
                        <field name="insurance_percent" class="oe_inline"/> %
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
