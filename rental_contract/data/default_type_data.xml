<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <!-- Contract Order Type for Customer -->
    <record id="normal_contract_type" model="contract.order.type">
        <field name="name">Normal Contract</field>
        <field name="contract_type">sale</field>
        <field name="warehouse_id" ref="stock.warehouse0"/>
        <field name="sequence_id" ref="rental_contract.seq_contract_normal_order"/>
    </record>
    <record id="rental_contract_type" model="contract.order.type">
        <field name="name">Rental Contract</field>
        <field name="contract_type">sale</field>
        <field name="warehouse_id" ref="stock.warehouse0"/>
        <field name="sequence_id" ref="rental_contract.seq_contract_rental_order"/>
    </record>
    <!-- Contract Order Type for Supplier -->
    <record id="sup_normal_contract_type" model="contract.order.type">
        <field name="name">Supplier Normal Contract</field>
        <field name="contract_type">purchase</field>
        <field name="warehouse_id" ref="stock.warehouse0"/>
        <field name="sequence_id" ref="rental_contract.seq_sup_contract_normal_order"/>
    </record>
    <record id="sup_rental_contract_type" model="contract.order.type">
        <field name="name">Supplier Rental Contract</field>
        <field name="contract_type">purchase</field>
        <field name="warehouse_id" ref="stock.warehouse0"/>
        <field name="sequence_id" ref="rental_contract.seq_sup_contract_rental_order"/>
    </record>
</odoo>
