<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_timeline_timeline" model="ir.ui.view">
        <field name="name">product.timeline.timeline</field>
        <field name="model">product.timeline</field>
        <field name="inherit_id" ref="sale_rental_timeline.view_product_timeline_timeline" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_instance_state" />
                <field name="product_instance_next_service_date" />
                <field name="product_instance_current_location_id" />
                <field name="product_instance_serial_number_id" />
            </field>
            <tr t-if="record.product_id" position="after">
                <tr t-if="record.product_instance_state">
                    <td>State:</td>
                    <td t-esc="record.product_instance_state" />
                </tr>
                <tr t-if="record.product_instance_next_service_date">
                    <td>Next Service:</td>
                    <td t-esc="record.product_instance_next_service_date" />
                </tr>
                <tr t-if="record.product_instance_current_location_id">
                    <td>Current Location:</td>
                    <td t-esc="record.product_instance_current_location_id" />
                </tr>
            </tr>
            <tr t-if="record.product_categ_id" position="after">
                <tr t-if="record.product_instance_serial_number_id">
                    <td>Serial Number:</td>
                    <td t-esc="record.product_instance_serial_number_id" />
                </tr>
            </tr>
        </field>
    </record>
</odoo>
