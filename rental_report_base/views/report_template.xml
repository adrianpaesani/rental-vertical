<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Load CSS -->
    <template id="assets_common" name="rental_fonts" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="https://fonts.googleapis.com/css?family=Roboto&amp;display=swap" rel="stylesheet"/>
            <link href="/rental_report_base/static/src/scss/report_styles.scss"
                  rel="stylesheet"
                  type="text/scss"
            />
        </xpath>
    </template>

    <!-- Rental External Layout -->
    <template id="external_layout_rental">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div>
            <!-- Header -->
            <div class="header rockbird">
                <div class="rockbird_logo" id="rockbird_logo">
                    <img src="/rental_report_base/static/src/img/rockbird_black_claim.png"
                        />
                </div>
                <div class="data">
                    <div class="data_header">
                        <t t-if="is_invoice">
                            <t t-if="env.ref('rental_base.rental_sale_type').id == doc.sale_type_id.id">
                                <span t-if="doc.type == 'out_invoice' and doc.state in ('open', 'in_payment', 'paid')">RENTAL INVOICE</span>
                                <span t-if="doc.type == 'out_invoice' and doc.state == 'draft'">RENTAL DRAFT INVOICE</span>
                                <span t-if="doc.type == 'out_invoice' and doc.state == 'cancel'">RENTAL CANCELLED INVOICE</span>
                                <span t-if="doc.type == 'out_refund'">RENTAL CREDIT NOTE</span>
                                <span t-if="doc.type == 'in_refund'">RENTAL VENDOR CREDIT NOTE</span>
                                <span t-if="doc.type == 'in_invoice'">RENTAL VENDOR BILL</span>
                            </t>
                            <t t-else="">
                                <span t-if="doc.type == 'out_invoice' and doc.state in ('open', 'in_payment', 'paid')">INVOICE</span>
                                <span t-if="doc.type == 'out_invoice' and doc.state == 'draft'">DRAFT INVOICE</span>
                                <span t-if="doc.type == 'out_invoice' and doc.state == 'cancel'">CANCELLED INVOICE</span>
                                <span t-if="doc.type == 'out_refund'">CREDIT NOTE</span>
                                <span t-if="doc.type == 'in_refund'">VENDOR CREDIT NOTE</span>
                                <span t-if="doc.type == 'in_invoice'">VENDOR BILL</span>
                            </t><span t-field="doc.number"/>
                        </t>
                        <t t-if="is_so">
                            <t t-if="env.ref('rental_base.rental_sale_type').id == doc.type_id.id">
                                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                    <span t-if="doc.state not in ['draft','sent']">RENTAL ORDER</span>
                                    <span t-if="doc.state in ['draft','sent']">RENTAL QUATATION</span>
                                </t>
                                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                    <span>RENATL PRO FORMA INVOICE</span>
                                </t>
                            </t>
                            <t t-else="">
                                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                    <span t-if="doc.state not in ['draft','sent']">ORDER</span>
                                    <span t-if="doc.state in ['draft','sent']">QUATATION</span>
                                </t>
                                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                    <span>PRO FORMA INVOICE</span>
                                </t>
                            </t><span t-field="doc.name"/>
                        </t>
                    </div>
                </div>
            </div>

            <div class="article rockbird"
                 t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="consignor">
                    <span t-field="company.partner_id.name"/>
                     | <span t-field="company.partner_id.street"/>
                     | <span t-field="company.partner_id.zip"/>
                    <span t-esc="company.partner_id.city.capitalize()"/>
                     | <span t-if="o.env.context.get('lang') != 'de_DE'"
                          t-esc="company.partner_id.country_id.name.capitalize()"/>
                    <t t-if="doc.branch_name">
                        <span> Branch <t t-esc="doc.branch_name"/></span>
                    </t>
                    <t t-else="">
                        <span></span>
                    </t>
                </div>
                <t t-raw="0"/>
            </div>

            <!-- Footer -->
            <div class="footer rockbird">
                <div class="company_info" id="company_info">
                    <div class="company_address">
                        <span t-esc="company.partner_id.name[:20]"/>
                        <span t-esc="company.partner_id.name[20:]"/>
                        <span> | COMPANY DOMICILE </span>
                        <span t-esc="company.partner_id.street"/>,
                        <span t-esc="company.partner_id.zip"/>
                        <span t-esc="company.partner_id.city"/>
                        <span> | BRANCH </span>
                        <span> Haselheckerstra√üe 9, 67667 Enkenbach-Alsenborn | </span>
                        <span t-esc="company.partner_id.country_id.name.upper()"/>

                    </div><br/>
                    <div class="company_contact">
                        TELEPHONE <span t-esc="company.partner_id.phone"/>
                        | EMAIL <span t-esc="company.partner_id.email"/>
                        | WEB <span t-esc="company.partner_id.website.split('://')[1]"/>
                        | VAT <span t-esc="company.partner_id.vat"/>
                    </div><br/>
                    <div class="company_ceo">
                        COMMERCIAL REGISTRY <span t-if="company.company_registry" t-esc="company.company_registry"/>
                        | CEO <span t-if="company.ceo_name" t-esc="company.ceo_name"/>
                    </div>
                    <div class="page_number">
                        <p>PAGE <span class="page"/> / <span class="topage"/></p>
                    </div>
                </div>
            </div>

        </div>
    </template>

    <!-- Load header and footer depending on page number -->
    <template id="minimal_layout" inherit_id="web.minimal_layout">
        <xpath expr="//script" position="replace">
            <script>
                <![CDATA[
                function subst() {
                    var vars = {};
                    var x = document.location.search.substring(1).split('&');
                    for (var i in x) {
                        var z = x[i].split('=', 2);
                        vars[z[0]] = unescape(z[1]);
                    }
                    var fromPage = document.getElementsByClassName('page');
                        for(var j = 0; j<fromPage.length; j++)
                            fromPage[j].textContent = vars['sitepage'];
                    var toPage = document.getElementsByClassName('topage');
                    for(var j = 0; j<toPage.length; j++)
                        toPage[j].textContent = vars['sitepages'];

                    var index = vars['webpage'].split('.', 4)[3];
                    var header = document.getElementById('minimal_layout_report_headers');
                    if(header !== null){
                        var companyHeader = header.children[index];
                        header.textContent = '';
                        header.appendChild(companyHeader);
                    }
                    var footer = document.getElementById('minimal_layout_report_footers');
                    if(footer !== null){
                        var companyFooter = footer.children[index];
                        footer.textContent = '';
                        footer.appendChild(companyFooter);
                    }

                    if(vars['page'] == 1){
                        var x = document.getElementsByClassName("no_print_on_first_page");
                        for (var i=0; i<x.length; i++) {
                            x[i].style.display = 'none';
                        }
                    }

                    if(vars['page'] > 1){
                        var x = document.getElementsByClassName("no_print_on_further_pages");
                        for (var i=0; i<x.length; i++) {
                            x[i].style.display = 'none';
                        }
                    }
                }
                ]]>
            </script>
        </xpath>
    </template>
</odoo>
