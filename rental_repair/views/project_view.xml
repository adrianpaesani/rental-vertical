<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_tree" model="ir.ui.view">
        <field name="name">project.task.tree</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="user_id" />
                <field name="date_deadline" />
            </tree>
        </field>
    </record>

    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">view.project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="partner_id" position="replace" />
            <field name="email_from" position="replace" />
            <field name="tag_ids" position="after">
                <field name="partner_id" attrs="{'readonly': [('parent_id', '!=', False)]}" />
                <field name="email_from" attrs="{'readonly': [('parent_id', '!=', False)]}" />
                <field name="phone" attrs="{'readonly': [('parent_id', '!=', False)]}" />
                <field name="mobile" attrs="{'readonly': [('parent_id', '!=', False)]}" />
            </field>
            <field name="user_id" position="after">
                <field name="product_id" />
                <field name="tracking" invisible="1" />
                <field name="lot_id"
                       attrs="{'invisible': [('tracking','=','none')]}"
                       domain="[('product_id', '=', product_id)]" />
            </field>
            <notebook position="inside">
                <page name="repair" string="Repair Orders">
                    <field name="repair_ids"
                           context="{'default_product_id': product_id, 'default_lot_id': lot_id}" />
                </page>
                <page name="repair" string="Vendor Repair Orders">
                    <field name="vendor_repair_ids"
                           context="{'default_order_type': %(rental_purchase_order_type.po_type_repair_order)d}" />
                </page>
            </notebook>
        </field>
    </record>

    <record id="action_project_helpdesk_tasks" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="context" eval="{'default_project_id': ref('project_project_helpdesk')}" />
        <field name="domain" eval="[('project_id','=', ref('project_project_helpdesk'))]" />
        <field name="search_view_id" ref="project.view_task_search_form" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click <i>Create</i> to start a new ticket.
            </p><p>
                To get things done, use activities and status on tasks.<br/>
                Chat in real time or by email to collaborate efficiently.
            </p>
        </field>
    </record>

    <menuitem name="Tickets"
        id="menu_tickets"
        parent="rental_base.menu_rental_root"
        action="action_project_helpdesk_tasks"
        sequence="2" />

</odoo>
