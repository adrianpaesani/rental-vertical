<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">rental_offday.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="rental_base.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='end_date']" position="after">
                <button name="rental_offday.action_add_offday"
                        string="Add additional Off Days"
                        icon="fa-pencil-square-o"
                        type="action"/>
            </xpath>
            <xpath expr="//group[@id='rental_times']//label[@for='product_uom_qty']" position="before">
                <label for="offday_number" string="Off-Time"  attrs="{'invisible': [('show_offday', '=', False)]}"/>
                <div attrs="{'invisible': [('show_offday', '=', False)]}">
                    <field name="offday_number" class="oe_inline"/> Day(s)
                </div>
            </xpath>
            <xpath expr="//field[@name='order_line']//form" position="inside">
                <notebook>
                    <page name="offdays" string="Off-Days" attrs="{'invisible': [('show_offday', '=', False)]}">
                        <group>
                            <field name="show_offday" invisible="1"/>
                            <field name="fixed_offday_type"/>
                        </group>
                        <group>
                            <group string="Fixed Off Days">
                                <field name="fixed_offday_ids" nolabel="1">
                                    <tree>
                                        <field name="date"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Additional Off Days">
                                <field name="add_offday_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>
