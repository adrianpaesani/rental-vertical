<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="rental_product_insurance.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='insurance_type']" position="after">
                    <field name="insurance_product_ids"/>
                    <field name="insurance_entire_time"/>
                </xpath>
            </field>
        </record>

        <record id="rental_pricelist_product_normal_form_view" model="ir.ui.view">
            <field name="name">view.rental.pricelist.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="rental_pricelist.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="day_scale_pricelist_item_ids" position="after">
                    <field name="day_insurance_product_ids" widget="many2many_tags"
                        options="{'no_create': True, 'no_open': True}"
                        attrs="{'invisible': ['|', ('rental_of_day','=',False), ('insurance_type', '=', 'none')]}"/>
                </field>
                <field name="month_scale_pricelist_item_ids" position="after">
                    <field name="month_insurance_product_ids" widget="many2many_tags"
                        options="{'no_create': True, 'no_open': True}"
                        attrs="{'invisible': ['|', ('rental_of_month','=',False), ('insurance_type', '=', 'none')]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
