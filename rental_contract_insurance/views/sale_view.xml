<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="rental_base.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='order_info']" position="inside">
                    <field name="update_insurance_line" invisible="1"/>
                    <field name="insurance_product_ids" context="{'default_sol_id': active_id}" nolabel="1">
                        <tree editable="bottom">
                            <field name="product_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="insurance_type"/>
                            <field name="insurance_percent"/>
                            <field name="insurance_price_unit"/>
                        </tree>
                    </field>
                    <field name="insurance_entire_time"/>
                    <field name="insurance_line_ids" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                    <field name="update_insurance_line" invisible="1"/>
                    <field name="rental" invisible="1"/>
                    <button name="update_rental_insurance_line"
                            type="object"
                            icon="fa-refresh"
                            class="oe_inline"
                            string="Update Insurance Line"
                            attrs="{'invisible': [
                                       '|',
                                       ('rental','=',False),
                                       ('update_insurance_line','=',False),
                                   ]}"/>
                </xpath>
            </field>
        </record>

        <record id="rental_pricelist_product_normal_form_view" model="ir.ui.view">
            <field name="name">view.rental.pricelist.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="rental_pricelist.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="day_scale_pricelist_item_ids" position="after">
                    <field name="day_insurance_product_ids" context="{'default_product_id': active_id}" nolabel="1">
                        <tree editable="bottom">
                            <field name="insurance_product_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="insurance_type"/>
                            <field name="insurance_percent"/>
                        </tree>
                    </field>
                </field>
                <field name="month_scale_pricelist_item_ids" position="after">
                    <field name="month_insurance_product_ids" context="{'default_product_id': active_id}" nolabel="1">
                        <tree editable="bottom">
                            <field name="insurance_product_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="insurance_type"/>
                            <field name="insurance_percent"/>
                        </tree>
                    </field>

                </field>
            </field>
        </record>

    </data>
</odoo>
