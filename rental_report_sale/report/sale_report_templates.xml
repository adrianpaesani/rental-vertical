<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_saleorder">
        <t t-call="web.html_container">
            <t t-set="is_so" t-value="True"/>
            <t t-foreach="docs" t-as="doc">
                <t t-call="rental_report_sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <!-- Sale order report -->
    <template id="report_saleorder_document">
        <t t-call="web.external_layout">
            <t t-set="lang" t-value="doc.partner_id.lang"/>
            <t t-set="doc" t-value="doc.with_context(lang=lang)"/>
            <div class="page">
                <!-- Partner address -->
                <div class="partner_address" id="partner_address">
                    <t t-if="doc.partner_id">
                        <t t-if="doc.partner_id.parent_id">
                            <span t-field="doc.partner_id.parent_id.name"/>
                            <br/>
                        </t>
                        <span t-field="doc.partner_id.name"/>
                        <br/>
                        <span t-field="doc.partner_id.street"/>
                        <br/>
                        <t t-if="doc.partner_id.street2">
                            <span t-field="doc.partner_id.street2"/>
                            <br/>
                        </t>
                        <span t-field="doc.partner_id.zip"/>
                        <span t-esc="doc.partner_id.city and doc.partner_id.city.capitalize()"/>
                        <t t-if="lang != 'de_DE' and doc.partner_id.country_id">
                           <br/>
                           <t t-esc="doc.partner_id.country_id and doc.partner_id.country_id.name.capitalize()"/>
                        </t>
                    </t>
                </div>
                <t t-set="rental_order" t-value="env.ref('rental_base.rental_sale_type').id == doc.type_id.id"/>

                <div class="details">
                    <table>
                        <tr t-if="doc.date_order and doc.state in ['draft','sent']">
                            <td>
                                <span class="inv">QUOTATION DATE</span>
                            </td>
                            <td>
                                <span t-if="doc.date_order"
                                      t-field="doc.date_order" t-options='{"format": "dd.MM.yyyy"}'/>
                            </td>
                        </tr>
                        <tr t-if="doc.date_order and doc.state not in ['draft','sent']">
                            <td>
                                <span class="inv">ORDERED DATE</span>
                            </td>
                            <td>
                                <span t-if="doc.confirmation_date"
                                      t-field="doc.confirmation_date" t-options='{"format": "dd.MM.yyyy"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><span class="inv">SERVICE PERIOD</span></td>
                            <td>
                                <span t-if="doc.default_start_date"
                                      t-field="doc.default_start_date" t-options='{"format": "dd.MM.yyyy"}'/> -
                                <span t-if="doc.default_end_date"
                                      t-field="doc.default_end_date" t-options='{"format": "dd.MM.yyyy"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><span class="inv">REFERENCE</span></td>
                            <td><span t-if="doc.client_order_ref" t-field="doc.client_order_ref"/></td>
                        </tr>
                        <tr>
                            <td><span class="inv">CONTACT PERSON</span></td>
                            <td><span t-if="doc.user_id" t-field="doc.user_id.name"/></td>
                        </tr>
                        <tr>
                            <td><span class="inv">TELEPHONE</span></td>
                            <td><span t-if="doc.user_id" t-field="doc.user_id.partner_id.phone"/></td>
                        </tr>
                        <tr>
                            <td><span class="inv">EMAIL</span></td>
                            <td><span t-if="doc.user_id" t-field="doc.user_id.partner_id.email"/></td>
                        </tr>
                    </table>
                </div>

                <div class="content">
                    <div id="products" class="products">
                        <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                        <!-- product table -->
                        <table id="product_table" class="product_table">
                            <thead>
                                <th>DESCRIPTION</th>
                                <th>QUANTITY, UOM</th>
                                <th>UNIT PRICE</th>
                                <th t-if="display_discount">DISCOUNT</th>
                                <th>TOTAL</th>
                            </thead>
                            <tbody>
                                <t t-set="section" t-value="False"/>
                                <t t-set="has_section" t-value="False"/>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-if="line['display_type'] == 'line_section'">
                                        <t t-set="has_section" t-value="True"/>
                                    </t>
                                </t>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>
                                    <t t-if="line['display_type'] == 'line_section'">
                                        <t t-if="section or not section and line.sequence > 1">
                                            <tr>
                                                <td colspan="5"><![CDATA[&nbsp;]]></td>
                                            </tr>
                                        </t>
                                        <t t-set="section" t-value="True"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                        <tr class="line_section">
                                            <td colspan="5">
                                                <span t-field="line.name"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-else="">
                                        <t t-if="line['display_type'] == 'line_note'">
                                            <tr class="line_note">
                                                <td colspan="5">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-else="">
                                            <tr>
                                                <td class="text-left">
                                                    <t t-if="not rental_order">
                                                        <b>[ <span t-if="line.product_id.default_code"
                                                        t-field="line.product_id.default_code"/> ]
                                                        <span t-field="line.product_id.name"/>
                                                        </b>
                                                        <br/>
                                                        <span class="description" t-if="line.product_id.description_sale" t-field="line.product_id.description_sale"/>
                                                    </t>
                                                    <t t-if="rental_order">
                                                        <b>[ <span t-if="line.display_product_id.default_code"
                                                        t-field="line.display_product_id.default_code"/> ]
                                                        <span t-field="line.display_product_id.name"/>
                                                        </b>
                                                        <br/>
                                                        <span class="description" t-field="line.name"/>
                                                    </t>
                                                </td>
                                                <td>
                                                    <span t-field="line.product_uom_qty"/>
                                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.price_unit"
                                                          t-options='{
                                                            "widget": "monetary",
                                                            "display_currency": doc.currency_id,
                                                          }'/>
                                                </td>
                                                <td t-if="display_discount">
                                                    <span t-field="line.discount"/>
                                                </td>
                                                <td><span t-field="line.price_subtotal"
                                                          t-options='{
                                                            "widget": "monetary",
                                                            "display_currency": doc.currency_id,
                                                          }'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <!-- subtotal -->
                        <table class="total_net" id="total_net">
                            <tr>
                                <td></td>
                                <td>NET TOTAL</td>
                                <td><span t-field="doc.amount_untaxed"
                                          t-options='{
                                            "widget": "monetary",
                                            "display_currency": doc.currency_id,
                                          }'/></td>
                            </tr>
                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr>
                                    <td></td>
                                    <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td>
                                            <span t-esc="amount_by_group[0].upper()"/>
                                            <!-- <span>&amp;nbsp;<span>on</span>
                                                <t t-esc="amount_by_group[2]"/>
                                            </span> -->
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]"
                                                  t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td><span t-esc="amount_by_group[0].upper()"/></td>
                                        <td class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" 
                                                  t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>TO PAY</td>
                                    <td>
                                        <b><span t-field="doc.amount_total"
                                                 t-options='{
                                                    "widget": "monetary",
                                                    "display_currency": doc.currency_id,
                                                  }'/>
                                        </b>
                                    </td>
                                </tr>
                                <tr></tr>
                            </t>
                        </table>
                        <!-- Payment note -->
                        <div class="payment_info">
                            <p t-if="doc.state not in ['draft','sent']">
                                Please refer the <t t-if="rental_order">Rental</t>
                                <t t-else="">Sale</t> order number
                                <span t-field="doc.name"/> which order/confirm on
                                <span t-if="doc.confirmation_date" t-field="doc.confirmation_date" t-options='{"format": "dd.MM.yyyy"}'/>:
                                <!-- <span t-if="doc.partner_bank_id.bank_id"
                                      t-field="doc.partner_bank_id.bank_id.name"/> | IBAN:
                                <span t-field="doc.partner_bank_id.acc_number" /> | BIC:
                                <span t-if="doc.partner_bank_id.bank_id" t-field="doc.partner_bank_id.bank_id.bic"/> -->
                            </p>
                            <p class="thank_msg">
                                Thank you for your great cooperation. If you have any questions, we will be happy to help. Your ROCKBIRD TEAM - <span>ROCKBIRD.EU</span>
                            </p>
                        </div>
                    </div>                    
                </div>
            </div>
        </t>
    </template>

</odoo>
