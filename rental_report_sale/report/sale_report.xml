<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <report 
        id="sale.action_report_saleorder"
        string="Quotation / Order"
        model="sale.order" 
        report_type="qweb-pdf"
        file="rental_report_sale.report_saleorder" 
        name="rental_report_sale.report_saleorder"
        print_report_name="(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)"
    />

    <report
        id="sale.action_report_pro_forma_invoice"
        string="PRO-FORMA Invoice"
        model="sale.order"
        report_type="qweb-pdf"
        groups="sale.group_proforma_sales"
        file="rental_report_sale.report_saleorder_pro_forma"
        name="rental_report_sale.report_saleorder_pro_forma"
        print_report_name="'PRO-FORMA - %s' % (object.name)"
    />

</odoo>
