<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_repair_order_form_swrent" model="ir.ui.view">
            <field name="name">repair.order.form.swrent</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"
                           domain="[('product_id', '=', product_id)]"
                           context="{'default_product_id': product_id}"/>
                </field>
            </field>
        </record>

        <record id="view_repair_order_tree_swrent" model="ir.ui.view">
            <field name="name">repair.order.tree.swrent</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_tree"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
