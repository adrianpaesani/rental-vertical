<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Stock Picking view -->
        <record id="view_picking_form_swrent" model="ir.ui.view">
            <field name="name">stock.picking.form.swrent</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']//field[@name='product_id']" position="after">
                    <field name="equipment_id"
                           domain="[('product_id', '=', product_id)]"
                           context="{'default_product_id': product_id}"
                           attrs="{'readonly': ['|', '&amp;', ('state', '!=', 'draft'), ('additional', '=', False), ('has_move_lines', '=', True)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Stock Move views -->
        <record id="view_move_picking_form_swrent" model="ir.ui.view">
            <field name="name">stock.move.picking.form.swrent</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"/>
                </field>
            </field>
        </record>
        <record id="view_picking_move_tree_swrent" model="ir.ui.view">
            <field name="name">stock.move.picking.tree.swrent</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_picking_move_tree"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"/>
                </field>
            </field>
        </record>
        <record id="view_move_tree_swrent" model="ir.ui.view">
            <field name="name">stock.move.tree.swrent</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"/>
                </field>
            </field>
        </record>
        <record id="view_move_form_swrent" model="ir.ui.view">
            <field name="name">stock.move.form.swrent</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"/>
                </field>
            </field>
        </record>

        <!-- Stock Move Line views -->
        <record id="view_move_line_tree_swrent" model="ir.ui.view">
            <field name="name">stock.move.line.tree.swrent</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"/>
                </field>
            </field>
        </record>
        <record id="view_move_line_form_swrent" model="ir.ui.view">
            <field name="name">stock.move.line.form.swrent</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="equipment_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
