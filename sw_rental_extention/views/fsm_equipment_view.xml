<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fsm_equipment_form_view_stock_swrent" model="ir.ui.view">
            <field name="name">fsm.equipment.form.swrent</field>
            <field name="model">fsm.equipment</field>
            <field name="inherit_id" ref="fieldservice_stock.fsm_equipment_form_view_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='current_stock_location_id']" position="after">
                    <field name="analytic_account_id" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Info" name="info">
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="internal_ref" />
                                <field name="other_ref" />
                            </group>
                            <group>
                                <field name="barcode" />
                                <field name="qr_code" />
                                <field name="manu_year" />
                            </group>
                        </group>
                    </page>
                    <page string="Sales &amp; Invoice" name="sale_inv">
                        <group>
                            <field name="sol_ids">
                                <tree>
                                    <field name="equipment_id"/>
                                    <field name="product_id" />
                                    <field name="product_uom_qty"/>
                                    <field name="qty_delivered"/>
                                    <field name="qty_invoiced" />
                                    <field name="price_unit" />
                                    <field name="tax_id"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="inv_line_ids">
                                <tree>
                                    <field name="equipment_id"/>
                                    <field name="product_id" />
                                    <field name="account_analytic_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" />
                                    <field name="invoice_line_tax_ids"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Purchase &amp; Stock" name="po_stock">
                        <group>
                            <field name="po_line_ids">
                                <tree>
                                    <field name="equipment_id"/>
                                    <field name="product_id" />
                                    <field name="account_analytic_id"/>
                                    <field name="product_qty"/>
                                    <field name="price_unit" />
                                    <field name="taxes_id"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="stock_move_ids">
                                <tree>
                                    <field name="equipment_id"/>
                                    <field name="product_id" />
                                    <field name="product_uom_qty"/>
                                    <field name="reserved_availability" string="Reserved"/>
                                    <field name="quantity_done"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Reapir" name="repair">
                        <group>
                            <field name="repair_order_ids">
                                <tree>
                                    <field name="equipment_id"/>
                                    <field name="product_id"/>
                                    <field name="partner_id"/>
                                    <field name="address_id"/>
                                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                                    <field name="guarantee_limit"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        
        <record id="fsm_equipment_tree_view_model_swrent" model="ir.ui.view">
            <field name="name">fsm.equipment.tree.swrent</field>
            <field name="model">fsm.equipment</field>
            <field name="inherit_id" ref="fieldservice_stock.fsm_equipment_tree_view_model"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="analytic_account_id"/>
                </field>
            </field>
        </record>
        
    </data>
</odoo>
