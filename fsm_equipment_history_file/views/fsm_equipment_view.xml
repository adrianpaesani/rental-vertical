<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fsm_equipment_form_view_stock" model="ir.ui.view">
            <field name="name">fsm.equipment.form</field>
            <field name="model">fsm.equipment</field>
            <field name="inherit_id" ref="fieldservice_stock.fsm_equipment_form_view_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='managed_by_id']" position="before">
                    <field name="history_file_id"
                           context="{'default_product_id': product_id, 'default_lot_id': lot_id, 'default_name': name}"
                           domain="[('product_id','=',product_id), '|', ('lot_id', '=', lot_id), ('lot_id', '=', False)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
