<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="invoice2data_template_tree_view" model="ir.ui.view">
				<field name="name">invoice2data.template.tree</field>
				<field name="model">invoice2data.template</field>
				<field name="arch" type="xml">
						<tree string="Invoice2Data Template">
								<field name="name"/>
								<field name="template"/>
						</tree>
				</field>
		</record>

		<record id="invoice2data_template_form_view" model="ir.ui.view">
				<field name="name">invoice2data.template.form</field>
				<field name="model">invoice2data.template</field>
				<field name="arch" type="xml">
						<form string="Invoice2Data Templates">
							<sheet>
								<group>
									<group>
										<field name="name"/>
									</group>
									<group>
										<field name="active"/>
									</group>
								</group>
								<notebook>
									<page string="Template">
										<field name="template" nolabel="1"/>
									</page>
									<page string="Template Help">
										<p> You can follow the 
											<a href="https://github.com/invoice-x/invoice2data/blob/master/TUTORIAL.rst"
												 target="_new">
												Official invoice2data tutorial
											</a>
											in order to make a new one.
										</p>
									</page>
								</notebook>
							</sheet>
						</form>
				</field>
		</record>

		<record id="invoice2data_template_form_action" model="ir.actions.act_window">
				<field name="name">Invoice2Data Templates</field>
				<field name="type">ir.actions.act_window</field>
				<field name="res_model">invoice2data.template</field>
				<field name="view_type">form</field>
				<field name="view_id" ref="invoice2data_template_tree_view"/>
				<field name="help" type="html">
					<p class="o_view_nocontent_smiling_face">
						Add a new I2D template
					</p><p>
						You must define templates so that the text scanned from invoices can be
						correctly interpreted.
					</p>
				</field>
		</record>

		<record id="invoice2data_template_action" model="ir.actions.act_window">
				<field name="name">Invoice2Data Templates</field>
				<field name="res_model">invoice2data.template</field>
				<field name="view_mode">tree,form</field>
		</record>

    <menuitem
        name="Invoice2Data Templates"
        parent="account.menu_finance_configuration"
        id="account_invoice2data_templates"
        sequence="95"
        action="invoice2data_template_action"
        groups="account.group_account_manager"/>

</odoo>