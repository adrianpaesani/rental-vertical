<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//field[@name='date_planned']" position="after">
                    <field name="trans_origin_sale_line_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <menuitem name="Transport Requisition"
            id="menu_trans_requisition"
            parent="rental_base.menu_top_vendor"
            action="purchase_requisition.action_purchase_requisition"
            sequence="2" />

    </data>
</odoo>
