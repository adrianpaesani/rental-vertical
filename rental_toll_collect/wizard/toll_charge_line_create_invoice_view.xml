<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tcl_create_invoice_form" model="ir.ui.view">
        <field name="model">toll.charge.line.create_invoice</field>
        <field name="arch"  type="xml">
            <form string="Create Invoice">
                <group name="main">
                    <field string="Customer"
                           name="partner_id"
                           widget="res_partner_many2one"
                           options='{"always_reload": True, "no_quick_create": True}'
                    />
                </group>
                <footer>
                    <button name="action_view_invoice" type="object" class="btn-primary" string="Create" />
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_tcl_create_invoice"
            multi="True"
            key2="client_action_multi"
            name="Create Invoice"
            res_model="toll.charge.line.create_invoice"
            src_model="toll.charge.line"
            view_mode="form"
            target="new"
            view_type="form"
    />

</odoo>