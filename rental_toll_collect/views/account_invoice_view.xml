<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Invoice -->
        <record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                        name="action_view_product_toll_charges"
                        type="object"
                        icon="fa-road"
                        title="Products Toll Charges"
                        attrs="{'invisible': [('toll_line_count', '=', 0)]}"
                    >
                        <div class="o_field_widget o_stat_info mr4">
                            <span class="o_stat_text">Toll Lines:</span>
                            <span class="o_stat_text">Invoiced:</span>
                        </div>
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="toll_line_count"/></span>
                            <span class="o_stat_value"><field name="toll_line_charged_count"/></span>
                            </div>
                    </button>
                </xpath>
                
            </field>
        </record>

        <!-- Invoice Line -->
        <record id="view_invoice_line_form" model="ir.ui.view">
            <field name="name">account.invoice.line.form</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <notebook>
                        <page name="toll_charges" string="Toll Charges">
                            <group>
                                <field name="toll_line_ids" nolabel="1">
                                    <tree create="0" delete="0" editable="top">
                                        <field name="toll_date"/>
                                        <field name="product_id"/>
                                        <field name="distance" sum="Total Distance"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="amount" sum="Total Amount"
                                               widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                        <field name="chargeable"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
